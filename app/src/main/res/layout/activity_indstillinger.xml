<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indstillinger">

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:text="Indstillinger"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="373dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textViewGrøn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Grøn"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewRød"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rød"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewOrange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Orange"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewGul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Gul"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewHvid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hvid"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:text="Tryk på en farve nedenunder for at skifte baggrundsfarve i spillet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>